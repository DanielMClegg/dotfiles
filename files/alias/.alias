#!/bin/bash

# A shortcut for tmuxinator
alias mux=tmuxinator

# A shortcut for docker-compose
alias compose=docker-compose

# A shortcut for ccat
alias cat=ccat

# Source: http://homeonrails.com/2016/05/truecolor-in-gnome-terminal-tmux-and-neovim/
# See: ~/.terminfo/xterm-256color-italic.terminfo
# alias tmux="env TERM=xterm-256color tmux"

# A shortcut for kubernetes kubectl
alias kube=kubectl

# Show mouse pointer again
# See: https://ask.fedoraproject.org/en/question/31186/my-mouse-cursor-dissapears-when-using-gnome3/?answer=49702#post-id-49702
alias mouse='dconf write /org/gnome/settings-daemon/plugins/cursor/active false'

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

colorflag="--color"

# List all files colorized in long format
alias ll="ls -lah ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -laF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# Always enable colored `grep` output
alias grep='grep --color=auto '

# Always enable colored `fgrep` output (grep -F)
alias fgrep='fgrep --color=auto'

# Always enable colored `egrep` output (grep -E)
alias egrep='egrep --color=auto'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Copy file interactive
alias cp='cp -i'

# Move file interactive
alias mv='mv -i'

# Untar
alias untar='tar xvf'

# Tar
alias targz='tar -czvf'

# Emit message when task is done
# Usage: docker-compose build --no-cache && compose up && rdy
alias rdy='notify-send "Task is done"'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Quickly get into fuelup folder
alias fu='cd ~/Projects/fuelup'

# Quickly get into Projects folder
alias pro='cd ~/Projects'

# Yeah I know, don't judge me!
alias gti='git'
