#!/bin/bash
(
    echo "i3 reference card" 
    echo
    echo "Basics"
    echo "---------------------------------------------------"
    echo "mod+enter             - open new terminal"
    echo "mod+h                 - focus left"
    echo "mod+j                 - focus down"
    echo "mod+k                 - focus up"
    echo "mod+l                 - focus right"
    echo "mod+space             - toggle focus mode"
    echo
    echo "Moving windows"
    echo "---------------------------------------------------"
    echo "mod+shift+h           - move window left"
    echo "mod+shift+j           - move window down"
    echo "mod+shift+k           - move window up"
    echo "mod+shift+l           - move window right"
    echo
    echo "Modifying windows"
    echo "---------------------------------------------------"
    echo "mod+f                 - toggle fullscreen"
    echo "mod+s                 - split a window vertically"
    echo "mod+v                 - split a window horizontally"
    echo "mod+r                 - resize mode"
    echo
    echo "Changing container layout"
    echo "---------------------------------------------------"
    echo "mod+e                 - toggle split"
    echo "mod+s                 - stacked"
    echo "mod+w                 - tabbed"
    echo "mod+a                 - focus parent"
    echo
    echo "Floating"
    echo "---------------------------------------------------"
    echo "mod+shift+space       - toggle floating"
    echo "mod+mouse             - drag floating"
    echo
    echo "Using workspaces"
    echo "---------------------------------------------------"
    echo "mod+0-9               - switch to another workspace"
    echo "mod+shift+0-9         - move window to a workspace"
    echo
    echo "Opening applications / Closing windows"
    echo "---------------------------------------------------"
    echo "mod+d                 - open app launcher"
    echo "mod+shift+q           - kill a window"
    echo
    echo "Resart / Exit"
    echo "---------------------------------------------------"
    echo "mod+shift+c           - reload config file"
    echo "mod+shift+r           - restart i3 inplace"
    echo "mod+shift+e           - exit i3"
) | less
