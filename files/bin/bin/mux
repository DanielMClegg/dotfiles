#!/bin/bash
#
# Set window percentage:
# tmux split-window [-v/-h] -p [nn] 

function session_work() {
    local sid="work"

    tmux start-server
    tmux new-session -d -s "$sid"

    window_dashboard "$sid" 0
    window_code "$sid" 1
    window_command "$sid" 2 "$HOME/Projects/fuelup"
    window_slack "$sid" 3

    tmux select-window -t "$sid:0"
    tmux a -t $sid
}

function session_dev() {
    tmux start-server
    tmux new-session -d -s "dev"

    window_dashboard dev 0
    window_code 1
    window_command 2 "$HOME/Projects"

    tmux select-window -t "work:0"
}

function window_dashboard() {
    local sid=$1
    local wid=$2

    if [[ $wid == 0 ]]; then
        tmux rename-window ""
    else
        tmux new-window -t "$sid:$wid" -n ""
    fi

    tmux split-window -v
    
    tmux select-pane -t 0
    tmux send-keys "glances" C-m

    tmux select-pane -t 1
    tmux send-keys "sudo tail -f /var/log/syslog" C-m
}

function window_code() {
    local sid=$1
    local wid=$2

    if [[ $wid == 0 ]]; then
        tmux rename-window ""
    else
        tmux new-window -t "$sid:$wid" -n ""
    fi
    
    tmux send-keys "cd $HOME/Projects/fuelup && nvim" C-m
}

function window_command() {
    local sid=$1
    local wid=$2
    local dir=$3

    if [[ $wid == 0 ]]; then
        tmux rename-window ""
    else
        tmux new-window -t "$sid:$wid" -n ""
    fi

    tmux split-window -v

    tmux select-pane -t 0
    tmux send-keys "cd $dir && clear" C-m

    tmux select-pane -t 1
    tmux send-keys "cd $dir && clear" C-m
}

function window_slack() {
    local sid=$1
    local wid=$2

    if [[ $wid == 0 ]]; then
        tmux rename-window ""
    else
        tmux new-window -t "$sid:$wid" -n ""
    fi

    tmux send-keys "slack-term" C-m
}

function usage() {
    echo "mux"
    echo
    echo "This script automates the creation of tmux sessions"
    echo
    echo "Usage:"
    echo
    echo "  work      - start work"
    echo "  dev       - start dev"
}

function main() {
    local cmd=$1

    if [[ -z "$cmd" ]]; then
        usage
        exit 1
    fi

    if [[ $cmd == "work" ]]; then
        session_work
    elif [[ $cmd == "dev" ]]; then
        session_dev
    fi
}

main "$@"
